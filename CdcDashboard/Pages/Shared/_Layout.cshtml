<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CDC Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js" defer></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>
    <style>
        .pulse-new { animation: pulse 1.2s ease-out; }
        @@keyframes pulse { 
            0% { transform: translateY(-6px); opacity:0 } 
            60% { transform: translateY(0); opacity:1 } 
            100% { transform: translateY(0); opacity:1 } 
        }
        .diff-old { color: #94a3b8; text-decoration: line-through; }
        .diff-new { color: #0f172a; font-weight:600; }
        .card-hover:hover { transform: translateY(-6px); box-shadow: 0 10px 30px rgba(2,6,23,0.08); }
        .flow-bar { height:12px; border-radius:999px; display:inline-block; }
    </style>
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="bg-slate-50 text-slate-800">
    <header class="bg-white shadow-sm px-6 py-4 flex items-center justify-between">
        <div class="flex items-center gap-4">
            <h1 class="text-lg font-semibold">CDC Dashboard</h1>
            <nav class="text-sm text-slate-500">
                <a asp-page="/Applicants" class="@(ViewContext.RouteData.Values["page"]?.ToString() == "/Applicants" ? "text-indigo-600 font-medium" : "hover:text-indigo-600")">Applicants</a>
                <a asp-page="/Bookings" class="ml-4 @(ViewContext.RouteData.Values["page"]?.ToString() == "/Bookings" ? "text-indigo-600 font-medium" : "hover:text-indigo-600")">Bookings</a>
                <a asp-page="/Packages" class="ml-4 @(ViewContext.RouteData.Values["page"]?.ToString() == "/Packages" ? "text-indigo-600 font-medium" : "hover:text-indigo-600")">Packages</a>
                <a asp-page="/Shared" class="ml-4 @(ViewContext.RouteData.Values["page"]?.ToString() == "/Shared" ? "text-indigo-600 font-medium" : "hover:text-indigo-600")">Shared</a>
            </nav>
        </div>
        <div class="text-sm text-slate-500">@ViewData["Subtitle"]</div>
    </header>

    <main class="p-6">
        @RenderBody()
    </main>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
